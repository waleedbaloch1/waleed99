import java.util.Scanner;

public class marks {

    public static void main(String[] args) {
       
        Scanner scan = new Scanner(System.in);
        System.out.print("Please enter a percentage mark: ");
        int marks = scan.nextInt(); 
    
        if (marks >= 0 && marks <= 100) {
           
            if (marks >= 80) {
                System.out.println(marks + " is a letter grade of A.");
            } else if (marks >= 70) {
                System.out.println(marks + " is a letter grade of B.");
            } else if (marks >= 60) {
                System.out.println(marks + " is a letter grade of C.");
            } else if (marks >= 50) {
                System.out.println(marks + " is a letter grade of D.");
            } else {
                System.out.println(marks + " is a letter grade of F.");
            }
        } else {
            
            System.out.println("Please enter a value between 0 and 100.");
        }
    }
}
