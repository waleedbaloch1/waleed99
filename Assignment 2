import java.util.ArrayList;
import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        
        while (true) {
            System.out.print("Enter a whole number > 0: ");
            int n = scanner.nextInt();
            
            if (n < 1) {
                System.out.println("Please enter a positive whole number.");
                continue;
            }

            ArrayList<Integer> sequence = new ArrayList<>();
            int highestValue = n;
            int originalN = n;

            while (n != 1) {
                sequence.add(n);
                if (n % 2 == 0) { 
                    n = n / 2;
                } else { // n is odd
                    n = 3 * n + 1;
                }
                
                if (n > highestValue) {
                    highestValue = n;
                }
            }
            sequence.add(1); 

            // Formatting output
            System.out.print("The Collatz sequence for n = " + originalN + " is: ");
            for (int i = 0; i < sequence.size(); i++) {
                System.out.print(sequence.get(i));
                if (i < sequence.size() - 1) {
                    System.out.print("; ");
                }
            }
            System.out.println();
            System.out.println("Number of terms = " + sequence.size());
            System.out.printf("Highest value reached = %,d%n", highestValue); 

            System.out.print("Do another? (y/n) ");
            char doAnother = scanner.next().toLowerCase().charAt(0);
            if (doAnother != 'y') {
                System.out.println("Goodbye!");
                break;
            }
        }
        scanner.close();
    }
}
