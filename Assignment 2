package assignment.pkg2;

import java.util.Scanner;

public class Assignment2 {


    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        
        while (true) {
            System.out.print("Enter a whole number > 0: ");// says to enter a whole number
            int n = scanner.nextInt();
           
            if (n < 1) {
                System.out.println("Please enter a positive whole number.");//
                continue;
            }

            
            int highestValue = n;
            int originalN = n;
            int numberofterms =0;
            // The Collatz sequence is
       
             System.out.print("The Collatz sequence for n = " + originalN + " is: ");
            while (n != 1) {
                
                if (n % 2 == 0) { 
                    n = n / 2;
                } else { // n is odd
                    n = 3 * n + 1;
                }
                
                if (n > highestValue) {
                    highestValue = n;
                }
            }
            

            // Formatting output
           
            
            System.out.println();
            System.out.println("Number of terms = "+ );
            System.out.printf("Highest value reached = %,d%n", highestValue); 
                               
            System.out.print("Do another? (y/n) ");//shows another do another either pick y or n
            char doAnother = scanner.next().toLowerCase().charAt(0);
            if (doAnother != 'y') {
                System.out.println("Goodbye!");// if press n says Goodbye
                break;
            }
        }
        scanner.close();
    }
}

